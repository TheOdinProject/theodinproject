{
  "parser": "@babel/eslint-parser",
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "max-len": ["error", 120]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["app/javascript"]
      }
    }
  }
}
