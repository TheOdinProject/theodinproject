<%= title(@lesson.title) %>
<div id="lesson-nav">
  <div class="inner-nav">
    <%= link_to "Course List", courses_path %> >>
    <%= link_to "#{@lesson.course.title}", course_path(@lesson.course.title_url) %> >>
    <%= link_to "#{@lesson.section.title}", course_path(@lesson.course.title_url, :anchor => "section-#{@lesson.section.title_url}") %> >>
    <% if @lesson.is_project %>
      Project:
    <% else %>
      <%= "#{@lesson.position_in_section}:" %>
    <% end %>
    <%= @lesson.title %>
  </div>
</div>

<div class="alert alert-info scroll-effect-alert">
  <strong>Scroll up</strong> or <strong>hover</strong> over the breadcrumbs to view the navigation bar
  <button type="button" class="close" data-dismiss="alert">&times;</button>
</div>

<!-- progress-tracking bar -->
<%= render :partial => "shared/pt_bar", :locals => { lesson: @lesson } %>

<!-- END progress-tracking bar -->

<% if user_signed_in? %>
  <!-- Displays You Can Do It giphy -->
  <% if @lesson.is_project? && !current_user.completed_lesson?(@lesson) %>
    <img id="motivate-img" src="https://media.giphy.com/media/xT4uQCnq6bDx8itLhK/giphy.gif">
  <% end %>
<% end %>

<div class="individual-lesson <%= @lesson.is_project ? 'project-lesson' : ''%>">
  <div class="container">

    <% if user_signed_in? %>
      <h3 class="lc-completion-indicator <%= current_user.completed_lesson?(@lesson) ? '' : 'hidden' %>" title="You've completed this lesson!">
        &#10004;
      </h3>
    <% end %>

    <%= convert_markdown_to_html(@lesson.content) %>

    <%= render partial: 'chat_link' %>

    <% if @right_box_ad %>
      <%= render :partial => "right_box_ad", :locals => { :ad => @right_box_ad } %>
    <% end %>

<div class="container lesson">
  <div class="row">
    <div class="col-12">
      <div class="lesson-header">
        <%= link_to @lesson.course, class: 'course-card-header__link' do %>
          <%= render 'courses/course/banner', course: @lesson.course %>
        <% end %>
        <h2 class="lesson-header__title accent"><%= @lesson.title %></h2>
      </div>
    </div>

    <div class="col-lg-3">
      <div class="d-none d-lg-block d-xl-block lesson-navigation"></div>
    </div>

    <div class="col-lg-9">
      <div class="lesson-content">
        <%= @lesson.content.html_safe %>
      </div>
    </div>
  </div>
</div>

<div class="lesson-functions">
  <div class="container">
    <div class="card-main">
      <h1 class="lesson-functions__title"><%= @lesson.course.title %></h1>
      <h3 class="lesson-functions__sub-title accent bold"><%= @lesson.title %></h3>
      <div class="lesson-button-group">
        <%= render 'lesson_buttons', lesson: @lesson, course: @lesson.course, user: @user %>
      </div>

      <% if @projects && ProjectSubmissionFeature.enabled? %>
        <%= render 'submissions' %>
      <% end %>
    </div>

    <%= render 'shared/bottom_cta',
      button: gitter_button,
      heading: 'Got questions?',
      sub_heading: 'Chat with our friendly Odin community in our Gitter chatrooms!'
    %>

    <%= render 'viking-advert' %>
  </div>
</div>
